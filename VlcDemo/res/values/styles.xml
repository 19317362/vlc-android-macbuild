<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleBarChildView">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="TitleBarButton" parent="TitleBarChildView"></style>

    <style name="TitleBarEdit" parent="TitleBarChildView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/videobrief__title_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MediaControllerButton">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dip</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="VideoBriefFieldName">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:textColor">@color/videobrief__title_text</item>
    </style>

    <style name="VideoBriefFieldValue">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:textColor">@color/videobrief__description_text</item>
    </style>

    <style name="VideoListFieldName">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/videolist__field_text</item>
    </style>

    <style name="VideoListFieldValue">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/videolist__field_text</item>
    </style>

    <style name="PlayerControlBarButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="PlayerTitleBarButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="SectionUnderline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:background">@color/videolist__section_title_underline</item>
    </style>

    <style name="ListDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/global__list_divider</item>
    </style>

    <style name="TextShadowOnPinkBackground">
        <item name="android:shadowColor">@color/catalist__item_text_shadow</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextShadowOnWhiteBackground">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>