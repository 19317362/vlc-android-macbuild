Subject: [PATCH 3/8] disable taglib

---
 compile.sh                 |    1 +
 vlc-android/jni/Android.mk |    2 +-
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/compile.sh b/compile.sh
index 0ea9a07..2f3dabe 100755
--- a/compile.sh
+++ b/compile.sh
@@ -77,6 +77,7 @@ mkdir contrib/android; cd contrib/android
     --disable-tremor \
     --disable-vorbis \
     --disable-sidplay2 \
+    --disable-taglib \
     --disable-samplerate
 
 # TODO: mpeg2, dts, theora
diff --git a/vlc-android/jni/Android.mk b/vlc-android/jni/Android.mk
index a12908e..93da5ca 100644
--- a/vlc-android/jni/Android.mk
+++ b/vlc-android/jni/Android.mk
@@ -25,7 +25,7 @@ LOCAL_LDLIBS := -L$(VLC_CONTRIB)/lib \
 	$(VLC_BUILD_DIR)/src/.libs/libvlccore.a \
 	$(VLC_BUILD_DIR)/compat/.libs/libcompat.a \
 	-ldl -lz -lm -llog \
-	-ldvbpsi -lebml -lmatroska -ltag \
+	-ldvbpsi -lebml -lmatroska \
 	-logg -lFLAC -ltheora \
 	-lmpeg2 -ldca -la52 \
 	-lavformat -lavcodec -lswscale -lavutil -lpostproc -lgsm -lopenjpeg \
