Subject: [PATCH 2/2] enable libass

---
 compile.sh                 |    6 +++---
 vlc-android/jni/Android.mk |    1 +
 2 files changed, 4 insertions(+), 3 deletions(-)

diff --git a/compile.sh b/compile.sh
index 7c3d102..7cdfbc1 100755
--- a/compile.sh
+++ b/compile.sh
@@ -64,9 +64,9 @@ mkdir contrib/android; cd contrib/android
     --disable-sdl \
     --disable-SDL_image \
     --disable-fontconfig \
-    --disable-ass \
-    --disable-freetyp2 \
-    --disable-fribidi \
+    --enable-iconv \
+    --enable-gcrypt \
+    --enable-gnutls \
     --disable-zvbi \
     --disable-kate \
     --disable-caca \
diff --git a/vlc-android/jni/Android.mk b/vlc-android/jni/Android.mk
index a12908e..1a886dc 100644
--- a/vlc-android/jni/Android.mk
+++ b/vlc-android/jni/Android.mk
@@ -32,6 +32,7 @@ LOCAL_LDLIBS := -L$(VLC_CONTRIB)/lib \
 	-lliveMedia -lUsageEnvironment -lBasicUsageEnvironment -lgroupsock \
 	-lspeex -lspeexdsp \
 	-lxml2 -lpng -lgnutls -lgcrypt -lgpg-error \
+	-liconv -lfreetype -lfribidi -lass \
 	$(CPP_STATIC)
 
 include $(BUILD_SHARED_LIBRARY)
